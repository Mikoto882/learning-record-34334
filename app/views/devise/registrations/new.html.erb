<div class="container">
  <div class="left-area">
    <div class="left-title">
      <h2>新規登録</h2>
    </div>
    <div class="left-text">
      <p>※アカウントを持っている方はこちらからログインしてください</p>
    </div>
    <div class="left-btn">
      <a href="#">ログイン</a>
    </div>
  </div>

  <div class="right-area">
  <%= form_with model: @user, url: user_registration_path, class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", maxlength:"10" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placegolder:"6文字以上の半角英数字" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード（確認用）</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placegolder:"同じパスワードを入力してください" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class:"registration-red-btn" %>
    </div>
  <% end %>
  </div>
</div>
